FROM ubuntu:22.04

LABEL org.opencontainers.image.description="CI build image for Ubuntu (https://github.com/StoneStepsInc/fit)"

RUN apt-get update -y

RUN apt-get install -y cmake patch curl unzip make g++ libsqlite3-dev libexpat1-dev zlib1g-dev

COPY get-exiv2 exiv2-c++17.patch /root/

WORKDIR /root

RUN chmod a+x get-sha256 get-exiv2

RUN ./get-sha256

RUN ./get-exiv2
